input {

<% @files.each do |file| %>
  file {
    type => "<%= file[:type] %>"
    path => "<%= file[:path] %>"
  }  
  <% end %>

}

output {
  # Output events to stdout for debugging. Feel free to remove
  # this output if you don't need it.
  # stdout { }

  # Ship events to the amqp fanout queue named 'rawlogs"
  amqp {
    host => "<%= @broker_host %>"
    exchange_type => "fanout"
    name => "rawlogs"
  }
}